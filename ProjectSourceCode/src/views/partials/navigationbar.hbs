<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>

    @import url('https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap');

    .navbar-brand,
    .navbar-nav .nav-link {
      font-family: 'Lato';
      font-size: 20px;
      font-weight: light;
    }

    .navbar-brand img {
      max-height: 50px;
    }

    .navbar-nav .nav-link {
      color: #343538;
    }

    .navbar-nav .nav-link:hover {
      color: #007bff;
    }

    .navbar-toggler {
      border-color: transparent;
    }

    .navbar-toggler-icon {
      background-color: #343538;
    }

    .navbar-collapse {
      justify-content: flex-end;
    }
    .custom-bg-color {
      background-color: #F5F3E9;
    }

    /* Custom CSS for Login and Profile buttons */
    .btn-login {
      border-radius: 20px; /* Round border */
      color: #4CAF50; /* Text color */
    }

    .btn-login:hover {
      background-color: #4CAF50; /* Green background on hover */
      color: #ffffff; /* White text color on hover */
    }

    .btn-register {
      border-radius: 20px; /* Round border */
      background-color: #007bff; /* Blue background */
      color: #ffffff; /* White text color */
    }

    .btn-register:hover {
      background-color: #0056b3; /* Darker blue background on hover */
    }

  </style>
</head>
<body>

<header>
  <nav class="navbar navbar-expand-lg navbar-light custom-bg-color border-bottom">

    <div class="container">
      <a class="navbar-brand" href="#">
        <img src="/images/logo.png" alt="Logo" />
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="/home">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/search">Search</a>
          </li>
          <li class="nav-item">
            <form action="/login" method="post" class="form-inline my-2 my-lg-0">
              <button type="submit" class="btn btn-link nav-link btn-login">Login</button>
            </form>
          </li>
          <li class="nav-item">
            <a href="/profile" class="nav-link btn-profile">Profile</a>
          </li>
          <li class="nav-item">
            <form action="/register" method="get" class="form-inline my-2 my-lg-0">
              <button type="submit" class="btn btn-link nav-link btn-register">Register</button>
            </form>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>

</body>
</html>
