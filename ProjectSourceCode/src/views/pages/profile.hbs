<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <title>User Profile</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <style>
      /* General styling */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f0f2f5;
}

/* Header styling */
.user-profile-header {
    color: #333;
    text-align: center;
    padding: 20px 0;
}

/* Main content styling */
.user-profile-main {
    padding: 20px;
    padding-bottom: 40px;
}

/* Profile container styling */
.user-profile {
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    padding: 20px;
    margin-bottom: 20px;
}

/* Profile heading styling */
.user-profile-heading {
    margin-top: 0;
    color: #333;
}

/* Profile text styling */
.user-profile-text {
    margin-top: 0;
    color: #666;
}

/* Recipe cards container styling */
.recipe-cards-container {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
}

/* Card styling */
.card {
    width: 250px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

/* Card title styling */
.card-title {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 10px;
}

/* Card text styling */
.card-text {
    font-size: 14px;
}

/* Primary button styling */
.btn-primary {
    background-color: #007bff;
    border-color: #007bff;
}

.btn-primary:hover {
    background-color: #0056b3;
    border-color: #0056b3;
}

/* Danger button styling */
.btn-danger {
    background-color: #dc3545;
    border-color: #dc3545;
}

.btn-danger:hover {
    background-color: #c82333;
    border-color: #c82333;
}
    </style>
  </head>
  <body>
    <header class="user-profile-header">
      <h1>{{username}}'s Profile</h1>
    </header>
    <main class="user-profile-main">
      <div class="container">
        <div class="row">
          <div class="col-md-6 offset-md-3">
            <div class="user-profile">
              <h2 class="user-profile-heading">{{user.name}}</h2>
              <p class="user-profile-text"><strong>Email:</strong> {{email}}</p>
              <p class="user-profile-text"><strong>Username:</strong>
                {{username}}</p>
              <p class="user-profile-text"><strong>Bio:</strong> {{bio}}</p>
              <div class="form-group">
                <a href="/update" class="btn btn-primary">Update Information</a>
              </div>
              <form action="/logout" method="post">
                <button type="submit" class="btn btn-danger">Logout</button>
              </form>
            </div>
            <h2 class="your-recipes-heading">Your Recipes</h2>
            <div class="recipe-cards-container">
              <div class="card">
                
                <div class="card-body">
                  <h5 class="card-title">Recipe 1 Name</h5>
                  <p class="card-text">Recipe 1 Description</p>
                </div>
              </div>
              <div class="card">
                
                <div class="card-body">
                  <h5 class="card-title">Recipe 2 Name</h5>
                  <p class="card-text">Recipe 2 Description</p>
                </div>
              </div>
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">Recipe 3 Name</h5>
                  <p class="card-text">Recipe 3 Description</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>