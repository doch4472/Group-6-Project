<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
        rel="stylesheet"
    />
    <title>Update</title>
    <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
    <header class="user-profile-header">
        <h1>Update Profile Information</h1>
    </header>
    <form class="update-page-form-wrapper" id="update-form" action="/update" method="post">
        <div class="form-group">
            <p>We'll never share your information with anyone else.</p>
        </div>
        <div class="form-group">
            <label class="login-page-form-label" for="email"><strong>Email</strong></label>
            <input
                class="login-page-form-input"
                type="email"
                id="email"
                name="email"
                placeholder="Enter your email"
                style="width: 100%;"
            />
        </div>
        <div class="form-group">
            <label class="login-page-form-label" for="bio"><strong>Bio</strong></label>
            <input
                class="login-page-form-input"
                type="text"
                id="bio"
                name="bio"
                placeholder="Enter your bio"
                style="width: 100%;"
            />
        </div>
        <button
            class="login-page-form-submit-btn"
            type="submit"
        >Update</button>
        <button onclick="goBack()" class="login-page-form-submit-btn" type="button">Back</button>
    </form>

    <script>
        function goBack() {
            window.history.back();
        }

        document.getElementById('update-form').addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent the form from submitting normally

            // Get the email input value
            const emailInput = document.getElementById('email').value;

            // Check if the email ends with "@gmail.com"
            if (!emailInput.endsWith('@gmail.com')) {
                alert('Email must end with "@gmail.com". ');
                return; // Stop further processing
            }

            // If the email is valid, submit the form
            this.submit();
        });
    </script>
</body>
</html>
