<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <title>Update</title>

    <link rel="stylesheet" href="/css/styles.css" />

  </head>
  <body>
    <header class="user-profile-header">
      <h1>Update</h1>
    </header>
    <form class="login-page-form-wrapper" action="/update" method="post">
          <div class="form-group">
            <p>We'll never share your information with anyone else.</p>
          </div>
          <div class="form-group">
            <label class="login-page-form-label" for="email">Email</label>
            <input
              class="login-page-form-input"
              type="text"
              id="email"
              name="email"
              placeholder="Enter your email"

              style="width: 100%;"
            />
          </div>
          <div class="form-group">
            <label class="login-page-form-label" for="password">Bio</label>
            <input
              class="login-page-form-input"
              type="bio"
              id="bio"
              name="bio"
              placeholder="Enter your bio"

              style="width: 100%;"
            />
          </div>
          <button
            class="login-page-form-submit-btn"
            type="submit"
          >Update</button>
        </form>
    <footer>
      <p>&copy; 2024 Budget Bites</p>
    </footer>
  </body>
</html>