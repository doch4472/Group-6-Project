<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Review Rating Page</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body class="review-rating-page-body">

    <div class="review-rating-page-container">
      <h2 class="review-rating-page-h2">Leave a Review</h2>
      <form id="review-form">
        <div class="review-rating-page-rating-container">
          <button
            type="button"
            class="review-rating-page-rating-btn"
            value="5"
          ><i class="fas fa-grin-stars"></i></button>
          <button
            type="button"
            class="review-rating-page-rating-btn"
            value="4"
          ><i class="fas fa-smile"></i></button>
          <button
            type="button"
            class="review-rating-page-rating-btn"
            value="3"
          ><i class="fas fa-meh"></i></button>
          <button
            type="button"
            class="review-rating-page-rating-btn"
            value="2"
          ><i class="fas fa-frown"></i></button>
          <button
            type="button"
            class="review-rating-page-rating-btn"
            value="1"
          ><i class="fas fa-sad-tear"></i></button>
        </div>
        <div></div>
        <input
          type="text"
          id="username"
          name="username"
          class="review-rating-page-input"
          placeholder="Your Username"
        />
        <textarea
          id="review-text"
          name="review"
          class="review-rating-page-textarea"
          placeholder="Write your review here..."
        ></textarea>
        <button type="submit" class="review-rating-page-button">Submit Review</button>
      </form>
    </div>

    <script>
      document.addEventListener('DOMContentLoaded', function() { const
      ratingButtons =
      document.querySelectorAll('.review-rating-page-rating-btn');
      ratingButtons.forEach(button => { button.addEventListener('click',
      function() { // Remove 'selected' class from all buttons
      ratingButtons.forEach(btn => btn.classList.remove('selected')); // Add
      'selected' class to the clicked button this.classList.add('selected'); });
      }); document.getElementById('review-form').addEventListener('submit',
      function(event) { event.preventDefault(); const selectedRating =
      document.querySelector('.review-rating-page-rating-btn.selected').value;
      const reviewText = document.getElementById('review-text').value; const
      username = document.getElementById('username').value; // Here you can
      handle the submission of the review data to your backend (e.g., using
      fetch API) console.log('Rating:', selectedRating); console.log('Review
      Text:', reviewText); console.log('Username:', username); // Reset the form
      this.reset(); // Remove 'selected' class from all buttons
      ratingButtons.forEach(btn => btn.classList.remove('selected')); }); });
    </script>

  </body>
</html>